@model MiWebApp.ViewModels.ProductoViewModel
<section>
    <h3>EDITAR PRODUCTOS</h3>
</section>
<section>
<form asp-controller="Productos" asp-action="Edit" method="post">
    
    <section>
        <input asp-for="IdProducto" type="hidden"class="form-control" />
    </section>

    <section>
        <label asp-for="Descripcion">Descripcion del producto</label>
        <input asp-for="Descripcion" class="form-control" />
    </section>

    <section>
        <label asp-for="Precio">Precio del producto</label>
        <input asp-for="Precio" class="form-control" />
    </section>
     <button type="submit">Enviar</button>
</form>


</section>